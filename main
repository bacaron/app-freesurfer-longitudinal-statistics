#!/bin/bash

#PBS -l nodes=1:ppn=1
#PBS -l vmem=8gb
#PBS -l walltime=1:30:00
#PBS -N app-freesurfer-longitudinal-stats
#PBS -V

set -x
set -e

[ ! -d ./parc_stats ] && mkdir -p ./parc_stats/ ./parc_stats/parc-stats
[ ! -d ./cortexmap ] && mkdir -p ./cortexmap && mkdir -p ./cortexmap/cortexmap

# copy license and export path for freesurfer
[ -z "$FREESURFER_LICENSE" ] && echo "Please set FREESURFER_LICENSE in .bashrc" && exit 1;
echo $FREESURFER_LICENSE > license.txt

# convert surfaces and generate appropriate summary statistic text files
time singularity exec -e -B `pwd`/license.txt:/usr/local/freesurfer/license.txt docker://brainlife/freesurfer:7.1.1-1 ./longitudinal_stats_freesurfer.sh

# generate csv's for each statistic that can be useful in MLC analyses
time singularity exec -e docker://brainlife/freesurfer-stats:1.2 ./generateParcellationCSVs.py

if [ -f ./parc-stats/parc-stats/longitudinal_stats_aparc.DKTatlas.csv ]; then
	# mkdir raw
	# mv aparc-rois/ *.txt ./tmp/*.txt *.gii ./raw/
	rm -rf ./tmp/*
	echo "complete"
	exit 0
else
	echo "stats computations failed somewhere. please check logs and derivatives"
	exit 1
fi
